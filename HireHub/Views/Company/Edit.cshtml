@model HireHub.Web.ViewModels.Company.EditCompanyVM

<div class="container">
    <div class="card shadow mb-4">
        <div class="card-body">
            <h2 class="h4 mb-4">Edit Company Information</h2>
            <form method="post" asp-page="/Company/Edit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="name">Company Name:</label>
                    <input asp-for="Name" id="name" type="text" class="form-control" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="logoUrl">Logo URL:</label>
                    <input asp-for="LogoUrl" id="logoUrl" type="text" class="form-control" required>
                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="contactEmail">Contact Email:</label>
                    <input asp-for="ContactEmail" id="contactEmail" type="email" class="form-control" required>
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="contactPhone">Contact Phone:</label>
                    <input asp-for="ContactPhone" id="contactPhone" type="tel" class="form-control">
                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="card-footer">
            <form asp-route-id="@Model.Id" method="post" asp-action="Delete" asp-controller="Company" onsubmit="return confirm('Are you sure you want to delete this company?');">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript dependencies for Bootstrap -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
