@model IEnumerable<HireHub.Web.ViewModels.Jobs.GetJobsVM>

<table>
    <thead>
        <tr>
            <th>Logo</th>
            <th>Position</th>
            <th>CompanyName</th>
            <th>Town</th>
            <th>MinSalary</th>
            <th>MaxSalary</th>
            <th>Created on</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td class="img-approve">
                    <img class="logo" src="@job.LogoUrl" alt="Company Logo">
                </td>
                <td>@job.Title</td>
                <td>@job.CompanyName</td>
                <td>@job.Town</td>
                <td>@job.MinSalary.ToString("0")</td>
                @if (job.MaxSalary != null)
                {
                    <td>@job.MaxSalary.Value.ToString("0")</td>
                }
                else
                {
                    <td> - </td>
                }
                <td>@job.CreatedOn</td>
                <td>
                    <div class="btn-group">
                        <form asp-route-id="@job.Id" asp-action="ApproveJob" asp-controller="Admin" class="btn-group">
                            <button type="submit" class="btn btn-primary btn btn-block" name="approveButton">Approve</button>
                        </form>
                        <form asp-route-id="@job.Id" asp-action="RejectJob" asp-controller="Admin" class="btn-group">
                            <button type="submit" class="btn btn-primary btn btn-block" style="background-color:#dc3545 !important">Reject</button>
                        </form>
                        <form class ="btn-group">
                            <a asp-route-id="@job.Id" asp-action="DetailsForAdmin" asp-controller="Admin" class="btn btn-primary btn btn-block" style="background-color:#007bff !important">Details</a>
                        </form>
                       
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
