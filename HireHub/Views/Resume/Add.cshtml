@model HireHub.Web.ViewModels.Resume.AddResumeVM

<div class="apply-form">
    <h2>Apply for Job</h2>
    <p>Please provide the URL to your resume below:</p>
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="@Model.ResumePath">CV Url:</label>
            <input asp-for="@Model.ResumePath" type="text" class="form-control">
            <span asp-validation-for="@Model.ResumePath" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name">CV Name:</label>
            <input asp-for="@Model.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="submit-button">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>