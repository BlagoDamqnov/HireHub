@using Microsoft.AspNetCore.Mvc.TagHelpers
@using HireHub.Web.Services.Data.Interfaces
@using HireHub.Data.Entities
@model HireHub.Web.ViewModels.Jobs.EditJobVM

@{
    ViewBag.Title = "Edit Job";
}

<h1 class="text-center">@ViewBag.Title</h1>
<hr />
<div class="container">
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="logo">Logo:</label>
                            <input asp-for="@Model.Logo" id="logo" type="text" class="form-control" value="@Model.Logo">
                            <span asp-validation-for="@Model.Logo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input asp-for="@Model.Title" id="title" type="text" class="form-control" value="@Model.Title">
                            <span asp-validation-for="@Model.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="category">Category:</label>
                            <select asp-for="@Model.CategoryId" id="category" class="form-control">
                                <option value="" selected disabled>Select Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                   <option value="@category.Id" selected="@category.Id == Model.CategoryId">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea asp-for="@Model.Description" id="description" class="form-control">@Model.Description</textarea>
                            <span asp-validation-for="@Model.Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="requirements">Requirements:</label>
                            <textarea asp-for="@Model.Requirements" id="requirements" class="form-control">@Model.Requirements</textarea>
                            <span asp-validation-for="@Model.Requirements" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="minSalary">Min Salary:</label>
                            <input asp-for="@Model.MinSalary" id="minSalary" type="number" class="form-control" value="@Model.MinSalary">
                            <span asp-validation-for="@Model.MinSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="maxSalary">Max Salary:</label>
                            <input asp-for="@Model.MaxSalary" id="maxSalary" type="number" class="form-control" value="@Model.MaxSalary">
                            <span asp-validation-for="@Model.MaxSalary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="country">Country:</label>
                            <select asp-for="@Model.CountryId" id="country" class="form-control">
                                <option value="" selected disabled>Select Country</option>
                                @foreach (var country in Model.Countries)
                                {
                                    <option value="@country.CountryId" selected="@(country.CountryId == Model.CountryId)">@country.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.CountryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="town">Town:</label>
                            <select asp-for="@Model.TownId" id="town" class="form-control">
                                @foreach (var town in Model.Towns)
                                {
                                    <option value="@town.TownId" selected="@(town.TownId == Model.TownId)">@town.Name</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.TownId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $("#CountryId").change(function () {
            loadTowns();
        });
    });

    function loadTowns() {
        var countryId = $("#CountryId").val();

        $.ajax({
            url: `/Job/GetTownsByCountryId`,
            type: "GET",
            data: { countryId: countryId },
            success: function (response) {
                populateTownDropdown(response);
            },
            error: function (xhr, status, error) {
                console.error("Failed to load town data: " + status);
            }
        });
    }

    function populateTownDropdown(towns) {
        var townDropdown = $("#TownId");
        townDropdown.empty();
        townDropdown.append('<option value="" selected disabled>Select Town</option>');

        $.each(towns, function (i, town) {
            console.log(town);
            townDropdown.append('<option value="' + town.townId + '">' + town.name + '</option>');
        });
    }

</script>