@model HireHub.Web.ViewModels.Company.CreateCompanyVM

<form method="post" asp-action="Create" class="my-4">
    <div class="form-group">
        <label asp-for="@Model.Name">Company Name:</label>
        <input asp-for="@Model.Name" type="text" class="form-control" required>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ContactEmail">Contact Email:</label>
        <input asp-for="@Model.ContactEmail" type="email" class="form-control" required>
        <span asp-validation-for="@Model.ContactEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ContactPhone">Contact Phone:</label>
        <input asp-for="@Model.ContactPhone" type="tel" class="form-control">
        <span asp-validation-for="@Model.ContactPhone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
