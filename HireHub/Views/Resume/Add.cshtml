@model HireHub.Web.ViewModels.Resume.AddResumeVM

<div class="container p-5">
    <div class="card shadow mb-4">
        <div class="card-body">
            <h2 class="h4 mb-4">Apply for Job</h2>
            <p>Please provide the URL to your resume below:</p>
            <form asp-action="Add" method="post">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="resumePath">CV Url:</label>
                            <input asp-for="@Model.ResumePath" id="resumePath" type="text" class="form-control">
                            <span asp-validation-for="@Model.ResumePath" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="name">CV Name:</label>
                            <input asp-for="@Model.Name" id="name" type="text" class="form-control">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="apply-btn">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
