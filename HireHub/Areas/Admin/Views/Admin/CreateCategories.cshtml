@using HireHub.Web.ViewModels.Categories;
@model CreateVM

<div class="container p-5">
    <div class="card shadow mb-4">
        <div class="card-body">
            <h2 class="h4 mb-4">Create category</h2>
            <form asp-action="CreateCategories" method="post">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="CategoryName">Category name:</label>
                            <input asp-for="@Model.CategoryName" type="text" class="form-control">
                            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="apply-btn">Create</button>
                </div>
            </form>
        </div>
    </div>

</div>

